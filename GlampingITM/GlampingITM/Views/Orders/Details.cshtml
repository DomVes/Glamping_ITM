@model GlampingITM.Data.Entities.Sale

@{
    ViewData["Title"] = "Details";
}

<flash dismissable="true" />

<h1>Detalles del Pedido</h1>

<div>
    <partial name="_OrderDetails" />    
</div>

<div>
    <a asp-action="Dispatch" asp-route-id="@Model?.Id" class="btn btn-sm btn-primary text-white"><i class="fa-solid fa-paper-plane"></i> Despachar</a>
    <a asp-action="Send" asp-route-id="@Model?.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-envelope-circle-check"></i> Envíar</a>
    <a asp-action="Confirm" asp-route-id="@Model?.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-circle-check"></i> Confirmar</a>
    <a asp-action="Cancel" asp-route-id="@Model?.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-ban"></i> Cancelar</a>
    <a asp-action="Index" class="btn btn-sm btn-success"><i class="fa-solid fa-arrow-rotate-left"></i> Regresar</a>
</div>

<hr />

<div class="container-fluid">
    <div class="card mt-2">
        <div class="card-header text-danger">
            <i class="fa fa-usd"></i>  <strong> Pedidos</strong>
        </div>
        <div class="card-body">
            <div id="view-all">
                @await Html.PartialAsync("_ViewAllDetail", Model.SaleDetails)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#DetailsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
